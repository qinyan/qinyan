<style type="text/css">

.css_mainbody {
    float: left;
    overflow: hidden;
    width: 100%;
}

.css_mainbody .grid {
    border: 1px solid #DDDDDD;
    border-collapse: collapse;
    empty-cells: show;
    margin: 10px auto;
    width: 100%;
}

.css_mainbody .grid th {
    background: none repeat scroll 0 0 #EEEEEE;
    font-size: 13px;
    font-weight: bold;
    height: 30px;
    line-height: 30px;
    text-align: center;
}

.css_mainbody .grid td {
    border: 1px solid #DDDDDD;
    color: #666666;
    font-size: 12px;
    height: 30px;
    line-height: 30px;
    padding-left: 10px;
    text-align: center;
}
</style>
<h2>用户列表</h2>
<div class="css_mainbody">
  <table class="grid">
    <thead>
      <tr>
        <th width="5%">序号</th>
        <th width="20%">用户id</th>
        <th width="10%">姓名</th>
        <th width="10%">性别</th>
        <th width="20%">电子邮箱</th>
        <th width="20%">创建时间</th>
        <th width="15%">操作</th>
      </tr>
    </thead>
      <tbody align="center">
        <% @users.each_with_index do |user, index| %>
          <tr>
            <td><%= index %></td>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td><%= user.gender %></td>
            <td><%= user.email %></td>
            <td><%= user.created_at.strftime('%F %T')%></td>
            <td>
              <%= link_to '修改', edit_user_path(user)%> |
              <%= link_to '查看', user_path(user)%> |
              <%= link_to '删除', user_path(user), confirm: '确定要删除吗？', method: :delete%>
            </td>
          </tr> 
        <% end -%>
      </tbody>
  </table>
</div>
<%= will_paginate @users, :previous_label=> '« 上一页', :next_label => '下一页 »'%>
