<h2>用户登陆</h2>
<div>
  <%= form_tag(login_path,  method: 'post') do%>
    <p>
      <label>用户名：</label>
      <%= text_field_tag :name%></br>
    </p>
    <p>
      <label>密  码：</label>
      <%= password_field_tag :password%></br>
    </p>
    <input type="submit" value="登陆" name="commit" onclick="$(this).closest('form').submit();return false;">
  <% end %>
</div>